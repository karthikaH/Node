{
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module"
  },
  "parser": "babel-eslint", // If you want to use experimental features (such as arrows as class methods)
  // you need to use babel-eslint as a parser
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "promise/catch-or-return": "error",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true
      }
    ]
  }
}
